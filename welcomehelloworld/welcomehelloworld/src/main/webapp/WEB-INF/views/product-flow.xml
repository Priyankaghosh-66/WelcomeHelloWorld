     <!-- if not specified the first view state is the starting state -->
	<view-state id="start" view="memberDetails" model="bean.userBean">
		<transition on="submit" to="confirmDetails" />
	</view-state>
	<view-state id="confirmDetails" view="confirmDetails" model="flowScope.userBean">
		<transition on="edit" to="start" />
		<transition on="submit" to="thankyou" />
	</view-state>
	<end-state id="thankyou" view="thankyou" />

	<end-state id="toHome" view="externalRedirect:contextRelative:index.jsp" />

	<end-state id="toException"
		view="externalRedirect:contextRelative:exception.jsp" />
	
                             
                          
                          
                          
