	<!-- if not specified the first view state is the starting state -->
	<view-state id="start" view="CartDetails" model="Models.Cart">
		<transition on="submit" to="shippingdetails" />
		
	</view-state>
	
	<view-state id="shippingdetails" view="shippingdetails.jsp" model="Models.User">
		<transition on="edit" to="editshippingaddress" />
		<transition on="submit" to="confirmorder" />
	</view-state>
	<view-state id="ConfirmDetails" view="ConfirmDetails.jsp" model="Models.User">
		<transition on="cancel" to="home" />
		<transition on="submit" to="thankyou" />
	</view-state>

	<end-state id="thankyou" view="thankyou.jsp" />

	<end-state id="toHome" view="externalRedirect:contextRelative:index.jsp" />

	<end-state id="toCancel"
		view="externalRedirect:contextRelative:index.jsp" />
	
        
        
        
        
        
        
        
        
        
        
        
        
                          
 </flow>                         